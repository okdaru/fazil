---
// FazilLayout.astro - Versión corregida con SEO completo
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
}

const { title, description, canonical, ogImage, noindex } = Astro.props;
const currentUrl = Astro.url;
const defaultOgImage = '/images/fazil-og-image.webp';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="robots" content={noindex ? "noindex,nofollow" : "index,follow"}>
  
  <!-- Keywords for better SEO -->
  <meta name="keywords" content="desarrollo web, páginas web a medida, desarrollo de apps, software personalizado, gamificación web, APIs, consultoría tecnológica, desarrollo tecnológico, FAZIL, Colombia, Bogotá">
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonical || currentUrl}>
  
  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={currentUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage || defaultOgImage}>
  <meta property="og:site_name" content="FAZIL">
  <meta property="og:locale" content="es_CO">
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={currentUrl}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage || defaultOgImage}>
  
  <!-- Favicons -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  
  <!-- Preconnect -->
<!-- Preconnect -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://cdnjs.cloudflare.com">
  
  <!-- Critical CSS inline -->
  <style>
    /* Critical CSS for above-the-fold content */
body { margin: 0; font-family: 'Lexend', sans-serif; overflow-x: hidden; }
    .hero-section { min-height: 100vh; display: flex; align-items: center; }
    header { position: fixed; top: 0; width: 100%; z-index: 50; }
  </style>
  
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "FAZIL",
      "url": "https://fazil.pro",
      "logo": "https://fazil.pro/images/logo-fazil.svg",
      "description": "Empresa de desarrollo tecnológico especializada en páginas web a medida, desarrollo de apps, software personalizado, gamificación web, APIs y consultoría tecnológica",
      "foundingDate": "2023",
      "founder": {
        "@type": "Person",
        "name": "Fazil Team"
      },
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Bogotá",
        "addressCountry": "CO"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+573181123660",
        "contactType": "customer service",
        "availableLanguage": "Spanish"
      },
      "sameAs": [
        "https://linkedin.com/company/fazil",
        "https://instagram.com/fazil.pro"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Servicios de Desarrollo Tecnológico",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Desarrollo de Páginas Web a Medida",
              "description": "Sitios web completamente personalizados optimizados para conversión"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Desarrollo de Aplicaciones",
              "description": "Apps web progresivas (PWA) y aplicaciones móviles nativas"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Software a Medida",
              "description": "Software personalizado adaptado a procesos específicos de negocio"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Gamificación Web",
              "description": "Experiencias web interactivas y gamificadas para mayor engagement"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Desarrollo de APIs",
              "description": "APIs robustas y escalables para conectar sistemas"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Consultoría Tecnológica",
              "description": "Asesoramiento en arquitectura tecnológica y optimización"
            }
          }
        ]
      }
    }
  </script>

  <!-- Local Business Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "FAZIL",
      "image": "https://fazil.pro/images/fazil-og-image.webp",
      "url": "https://fazil.pro",
      "telephone": "+573181123660",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Bogotá",
        "addressCountry": "CO"
      },
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": [
          "Monday",
          "Tuesday", 
          "Wednesday",
          "Thursday",
          "Friday"
        ],
        "opens": "09:00",
        "closes": "18:00"
      },
      "sameAs": [
        "https://linkedin.com/company/fazil",
        "https://instagram.com/fazil.pro"
      ]
    }
  </script>
</head>
<body>
  <slot />
  
  <!-- Global styles integrados -->
  
</body>
</html>