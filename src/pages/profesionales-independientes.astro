---
import Layout from '../layouts/Layout.astro';
import HeaderInternal from '../components/HeaderInternal.astro';
import Footer from '../components/Footer.astro';

// Características para profesionales independientes
const coreFeatures = [
  {
    title: "Diseño profesional y confiable",
    description: "Página web con estética que transmite credibilidad y profesionalismo, crucial para médicos, abogados y consultores.",
    icon: "briefcase"
  },
  {
    title: "Optimización para búsquedas locales",
    description: "Configuración para aparecer cuando potenciales clientes busquen tus servicios en tu zona.",
    icon: "search"
  },
  {
    title: "Perfecta visualización en móviles",
    description: "Tu página se verá profesional en cualquier dispositivo, manteniendo la imagen de calidad que tus clientes esperan.",
    icon: "smartphone"
  },
  {
    title: "Integración con WhatsApp Business",
    description: "Botón directo para que los clientes agenden consultas o pidan información por WhatsApp.",
    icon: "whatsapp"
  }
];

// Lo que incluye el paquete estándar para profesionales
const includedFeatures = [
  "Página principal atractiva",
  "Sección de servicios profesionales",
  "Información sobre tu experiencia",
  "Ubicación del consultorio con mapa",
  "Horarios de atención",
  "Formulario de contacto",
  "Botón de WhatsApp Business",
  "Enlaces a redes sociales",
  "Optimización SEO para tu profesión",
  "Hosting incluido",
  "Dominio incluido"
];

// Tipos de profesionales (para SEO y contextualización)
const professionalTypes = [
  {
    type: "Médicos y profesionales de la salud",
    examples: ["Médicos generales", "Odontólogos", "Psicólogos", "Nutricionistas", "Fisioterapeutas"]
  },
  {
    type: "Servicios legales y financieros",
    examples: ["Abogados", "Contadores", "Consultores tributarios", "Asesores financieros"]
  },
  {
    type: "Consultores y asesores",
    examples: ["Consultores de marketing", "Coaches personales", "Asesores inmobiliarios", "Consultores de negocios"]
  }
];
---

<Layout 
  title="Páginas Web para Profesionales Independientes en 180 minutos | Fazil"
  description="Crea tu página web profesional para médicos, abogados o consultores en solo 3 horas. Diseño que genera confianza y facilita la captación de clientes por $250,000 - pago único."
  ogImage="/images/og-web-profesionales.jpg"
  isHomepage={false}
>
  <HeaderInternal />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-12 bg-gradient-to-br from-blue-700 to-purple-700 text-white">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Páginas Web para Profesionales Independientes</h1>
          <p class="text-xl text-blue-100 mb-8">
            Impulsa tu carrera profesional con una presencia digital que transmite confianza y te ayuda a captar nuevos clientes.
          </p>
          <div class="bg-white/10 p-6 rounded-xl backdrop-blur-sm mb-8">
            <p class="text-lg font-medium">Página web profesional por solo</p>
            <div class="flex items-center justify-center">
              <span class="text-3xl font-bold mr-2">$250,000 COP</span>
              <span class="text-sm bg-yellow-400 text-blue-900 py-1 px-3 rounded-full font-bold">Pago único</span>
            </div>
            <p class="text-sm mt-2">Entrega en 180 minutos (3 horas) después de aprobar el diseño</p>
          </div>
          <a 
            href="https://wa.me/+573181123660?text=Hola%20Fazil,%20me%20interesa%20una%20página%20web%20para%20mi%20consultorio/despacho%20profesional"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-4 bg-white text-blue-700 hover:bg-blue-50 rounded-lg font-bold transition shadow-lg hover:shadow-xl"
          >
            Solicitar tu página web ahora
          </a>
        </div>
      </div>
    </section>

    <!-- Para qué tipo de profesionales -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Diseñada para diferentes áreas profesionales</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Nuestra solución se adapta a las necesidades específicas de tu profesión, destacando lo que te hace único.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          {professionalTypes.map(category => (
            <div class="bg-gray-50 rounded-xl p-6 hover:shadow-md transition-shadow">
              <h3 class="text-xl font-bold mb-4 text-center">{category.type}</h3>
              <ul class="space-y-2">
                {category.examples.map(example => (
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{example}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Lo que incluye -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Lo que incluye tu página web profesional</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Obtienes una página web completa, optimizada para transmitir profesionalismo y generar confianza.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
          {coreFeatures.map(feature => (
            <div class="bg-white rounded-xl p-6 text-center shadow-md">
              <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2">{feature.title}</h3>
              <p class="text-gray-600 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>

        <!-- Lista de características incluidas -->
        <div class="max-w-3xl mx-auto bg-white rounded-xl p-8 shadow-md">
          <h3 class="text-xl font-bold mb-4 text-center">Todo esto incluido en tu página web</h3>
          <div class="grid md:grid-cols-2 gap-4">
            {includedFeatures.map(feature => (
              <div class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{feature}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA final -->
    <section class="py-16 bg-gradient-to-br from-blue-600 to-purple-600 text-white">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold mb-6">Da el paso que tu carrera profesional necesita</h2>
        <p class="text-xl max-w-3xl mx-auto mb-8">
          Tu presencia digital profesional en solo 3 horas. Sin complicaciones técnicas ni conocimientos especiales.
        </p>
        <a 
          href="https://wa.me/+573181123660?text=Hola%20Fazil,%20quiero%20solicitar%20mi%20página%20web%20profesional%20por%20$250,000"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-8 py-4 bg-white text-blue-700 hover:bg-blue-50 rounded-lg font-bold transition shadow-lg hover:shadow-xl"
        >
          Solicitar ahora por solo $250,000
        </a>
        <p class="mt-4 text-sm text-blue-100">
          Pago único. Sin mensualidades ni costos ocultos.
        </p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>