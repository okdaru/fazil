---
import Layout from '../layouts/Layout.astro';
import HeaderInternal from '../components/HeaderInternal.astro';
import Footer from '../components/Footer.astro';

// Características para academias y consultorios
const coreFeatures = [
  {
    title: "Diseño que transmite confianza y profesionalismo",
    description: "Página web con estética profesional que proyecta credibilidad para tu academia o consultorio.",
    icon: "school"
  },
  {
    title: "Optimización para público local",
    description: "Configuración para aparecer cuando potenciales alumnos o pacientes busquen servicios como los tuyos en tu zona.",
    icon: "search"
  },
  {
    title: "Adaptada para todos los dispositivos",
    description: "Tu página se verá perfecta tanto en computadoras como en dispositivos móviles, donde la mayoría de las búsquedas se realizan.",
    icon: "smartphone"
  },
  {
    title: "Integración con WhatsApp Business",
    description: "Botón directo para que interesados consulten sobre tus servicios, horarios o agenden una cita vía WhatsApp.",
    icon: "whatsapp"
  }
];

// Lo que incluye el paquete estándar
const includedFeatures = [
  "Sección de servicios ofrecidos",
  "Información sobre tu academia/consultorio",
  "Perfiles breves del equipo profesional",
  "Ubicación con mapa integrado",
  "Horarios de atención",
  "Formulario de contacto",
  "Botón de WhatsApp Business",
  "Enlaces a redes sociales",
  "Optimización SEO",
  "Hosting incluido",
  "Dominio incluido",
];

// Tipos de establecimientos (para SEO)
const businessTypes = [
  {
    type: "Academias y centros educativos",
    examples: ["Academias de idiomas", "Centros de formación", "Escuelas de música", "Academias de arte", "Centros de tutorías"]
  },
  {
    type: "Consultorios y clínicas",
    examples: ["Consultorios médicos", "Consultorios odontológicos", "Centros de terapia", "Clínicas estéticas", "Centros de rehabilitación"]
  },
  {
    type: "Centros especializados",
    examples: ["Centros de yoga/pilates", "Gimnasios", "Escuelas de baile", "Centros deportivos", "Academias de preparación"]
  }
];
---

<Layout 
  title="Páginas Web para Academias y Consultorios en 180 minutos | Fazil"
  description="Crea la página web profesional para tu academia o consultorio en solo 3 horas. Genera confianza y capta nuevos alumnos o pacientes por $250,000 - pago único."
  ogImage="/images/og-web-academias.jpg"
  isHomepage={false}
>
  <HeaderInternal />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-12 bg-gradient-to-br from-blue-700 to-purple-700 text-white">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center ">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Páginas Web para Academias y Consultorios</h1>
          <p class="text-xl text-blue-100 mb-8">
            Proyecta profesionalismo, muestra tus servicios y facilita el contacto con nuevos alumnos o pacientes.
          </p>
          <div class="bg-white/10 p-6 rounded-xl backdrop-blur-sm mb-8">
            <p class="text-lg font-medium">Página web profesional por solo</p>
            <div class="flex items-center justify-center">
              <span class="text-3xl font-bold mr-2">$250,000 COP</span>
              <span class="text-sm bg-yellow-400 text-blue-900 py-1 px-3 rounded-full font-bold">Pago único</span>
            </div>
            <p class="text-sm mt-2">Entrega en 180 minutos (3 horas) después de aprobar el diseño</p>
          </div>
          <a 
            href="https://wa.me/+573181123660?text=Hola%20Fazil,%20me%20interesa%20una%20página%20web%20para%20mi%20academia/consultorio"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-4 bg-white text-blue-700 hover:bg-blue-50 rounded-lg font-bold transition shadow-lg hover:shadow-xl"
          >
            Solicitar tu página web ahora
          </a>
        </div>
      </div>
    </section>

    <!-- Para qué tipo de establecimientos -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Ideal para diferentes centros educativos y consultorios</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Nuestra solución se adapta específicamente a los requerimientos de tu academia o consultorio.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          {businessTypes.map(category => (
            <div class="bg-gray-50 rounded-xl p-6 hover:shadow-md transition-shadow">
              <h3 class="text-xl font-bold mb-4 text-center">{category.type}</h3>
              <ul class="space-y-2">
                {category.examples.map(example => (
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{example}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Lo que incluye -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Lo que incluye tu página web</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Obtienes una página web completa, optimizada para proyectar profesionalismo y facilitar el contacto.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
          {coreFeatures.map(feature => (
            <div class="bg-white rounded-xl p-6 text-center shadow-md">
              <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path d="M12 14l9-5-9-5-9 5 9 5z" />
                  <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2">{feature.title}</h3>
              <p class="text-gray-600 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>

        <!-- Lista de características incluidas -->
        <div class="max-w-3xl mx-auto bg-white rounded-xl p-8 shadow-md">
          <h3 class="text-xl font-bold mb-4 text-center">Todo esto incluido en tu página web</h3>
          <div class="grid md:grid-cols-2 gap-4">
            {includedFeatures.map(feature => (
              <div class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{feature}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Por qué necesitas una página web -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">¿Por qué tu academia o consultorio necesita una página web?</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            En el entorno actual, una presencia digital profesional es esencial para tu éxito.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div class="bg-gray-50 rounded-xl p-6 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mb-4 mx-auto">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-3 text-center">Capta nuevos clientes</h3>
            <p class="text-gray-600 text-sm text-center">
              El 76% de las personas buscan academias y consultorios en internet antes de tomar una decisión. Sin presencia digital, pierdes esos potenciales clientes.
            </p>
          </div>

          <div class="bg-gray-50 rounded-xl p-6 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mb-4 mx-auto">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-3 text-center">Genera confianza</h3>
            <p class="text-gray-600 text-sm text-center">
              Una página web profesional establece credibilidad y confianza antes de que el cliente te visite personalmente, factor crucial en servicios educativos y de salud.
            </p>
          </div>

          <div class="bg-gray-50 rounded-xl p-6 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mb-4 mx-auto">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-3 text-center">Reduce costos operativos</h3>
            <p class="text-gray-600 text-sm text-center">
              Responde automáticamente preguntas frecuentes, reduce llamadas innecesarias y facilita información básica como ubicación y servicios las 24 horas.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA final -->
    <section class="py-16 bg-gradient-to-br from-blue-600 to-purple-600 text-white">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold mb-6">Dale a tu academia o consultorio la presencia digital que merece</h2>
        <p class="text-xl max-w-3xl mx-auto mb-8">
          Tu página web profesional lista en solo 3 horas. Sin complicaciones técnicas ni conocimientos especiales.
        </p>
        <a 
          href="https://wa.me/+573181123660?text=Hola%20Fazil,%20quiero%20solicitar%20mi%20página%20web%20para%20mi%20academia/consultorio%20por%20$250,000"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-8 py-4 bg-white text-blue-700 hover:bg-blue-50 rounded-lg font-bold transition shadow-lg hover:shadow-xl"
        >
          Solicitar ahora por solo $250,000
        </a>
        <p class="mt-4 text-sm text-blue-100">
          Pago único. Sin mensualidades ni costos ocultos.
        </p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>