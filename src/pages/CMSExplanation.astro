    faqButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Usar HTMLElement explícitamente y verificar si es nulo
        const content = button.nextElementSibling as HTMLElement | null;
        const arrow = button.querySelector('svg') as HTMLElement | null;
        
        // Verificar que content y arrow no sean nulos antes de acceder a sus propiedades
        if (content) {
          // Usar setAttribute/getAttribute en lugar de style directamente
          const currentDisplay = content.style.display;
          if (currentDisplay === 'none' || !currentDisplay) {
            content.style.display = 'block';
            if (arrow) arrow.classList.add('transform', 'rotate-180');
          } else {
            content.style.display = 'none';
            if (arrow) arrow.classList.remove('transform', 'rotate-180');
          }
        }
      });
    });
  });
</script>