---
import Layout from '../layouts/Layout.astro';
import HeaderInternal from '../components/HeaderInternal.astro';
import Footer from '../components/Footer.astro';

// Características para eventos y landing pages temporales
const coreFeatures = [
  {
    title: "Diseño atractivo y enfocado a la acción",
    description: "Página diseñada específicamente para convertir visitantes en asistentes o clientes, con llamados a la acción estratégicos.",
    icon: "calendar"
  },
  {
    title: "Lista en tiempo récord",
    description: "Tu landing page para eventos estará online en solo 3 horas, ideal para promociones de último momento o eventos próximos.",
    icon: "clock"
  },
  {
    title: "Perfecta en todos los dispositivos",
    description: "Asegura que todos puedan acceder a la información de tu evento, sin importar si usan celular, tablet o computadora.",
    icon: "smartphone"
  },
  {
    title: "Integración con WhatsApp Business",
    description: "Botón directo para que los interesados consulten sobre el evento o confirmen asistencia vía WhatsApp.",
    icon: "whatsapp"
  }
];

// Lo que incluye el paquete estándar
const includedFeatures = [
  "Diseño atractivo enfocado en conversión",
  "Información completa del evento",
  "Fecha, hora y ubicación destacadas",
  "Detalles de precios o entradas",
  "Formulario de contacto",
  "Botón de WhatsApp Business",
  "Enlaces a redes sociales",
  "Integración con Google Maps",
  "Optimización SEO ",
  "Hosting incluido",
  "Dominio incluido"
];

// Tipos de eventos (para SEO)
const eventTypes = [
  {
    type: "Eventos corporativos",
    examples: ["Lanzamientos de producto", "Conferencias", "Webinars", "Networking", "Capacitaciones"]
  },
  {
    type: "Eventos sociales",
    examples: ["Bodas", "Cumpleaños", "Aniversarios", "Reuniones", "Celebraciones especiales"]
  },
  {
    type: "Promociones y marketing",
    examples: ["Descuentos por temporada", "Lanzamientos especiales", "Black Friday", "Campañas limitadas", "Ofertas flash"]
  }
];
---

<Layout 
  title="Landing Pages para Eventos y Promociones en 180 minutos | Fazil"
  description="Crea tu landing page para eventos o promociones temporales en solo 3 horas. Maximiza asistencia y conversiones con un sitio web enfocado en resultados por $250,000 - pago único."
  ogImage="/images/og-web-eventos.jpg"
  isHomepage={false}
>
  <HeaderInternal />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-12 bg-gradient-to-br from-blue-700 to-purple-700 text-white">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center pb-20">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Landing Pages para Eventos y Promociones</h1>
          <p class="text-xl text-blue-100 mb-8">
            Maximiza la asistencia a tu evento o el éxito de tu promoción con una página web enfocada en resultados.
          </p>
          <div class="bg-white/10 p-6 rounded-xl backdrop-blur-sm mb-8">
            <p class="text-lg font-medium">Landing page profesional por solo</p>
            <div class="flex items-center justify-center">
              <span class="text-3xl font-bold mr-2">$250,000 COP</span>
              <span class="text-sm bg-yellow-400 text-blue-900 py-1 px-3 rounded-full font-bold">Pago único</span>
            </div>
            <p class="text-sm mt-2">Entrega en 180 minutos (3 horas) después de aprobar el diseño</p>
          </div>
          
          <a 
            href="https://wa.me/+573181123660?text=Hola%20Fazil,%20me%20interesa%20una%20landing%20page%20para%20mi%20evento/promoción"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-4 bg-white text-blue-700 hover:bg-blue-50 rounded-lg font-bold transition shadow-lg hover:shadow-xl"
          >
            Solicitar tu página web page ahora
          </a>
        </div>
      </div>
    </section>

    <!-- Para qué tipo de eventos -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Ideal para todo tipo de eventos y promociones</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Nuestra solución se adapta perfectamente a diversos tipos de eventos y promociones temporales.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          {eventTypes.map(category => (
            <div class="bg-gray-50 rounded-xl p-6 hover:shadow-md transition-shadow">
              <h3 class="text-xl font-bold mb-4 text-center">{category.type}</h3>
              <ul class="space-y-2">
                {category.examples.map(example => (
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{example}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Lo que incluye -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Lo que incluye tu landing page</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Obtienes una página completa, optimizada para maximizar la asistencia y el éxito de tu evento.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
          {coreFeatures.map(feature => (
            <div class="bg-white rounded-xl p-6 text-center shadow-md">
              <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2">{feature.title}</h3>
              <p class="text-gray-600 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>

        <!-- Lista de características incluidas -->
        <div class="max-w-3xl mx-auto bg-white rounded-xl p-8 shadow-md">
          <h3 class="text-xl font-bold mb-4 text-center">Todo esto incluido en tu landing page</h3>
          <div class="grid md:grid-cols-2 gap-4">
            {includedFeatures.map(feature => (
              <div class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{feature}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Ventajas de una landing page -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">¿Por qué necesitas una landing page?</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Las landing pages específicas para eventos y promociones ofrecen ventajas significativas:
          </p>
        </div>

        <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto">
          <div class="bg-gray-50 rounded-xl p-5 text-center hover:shadow-md transition-shadow">
            <div class="text-3xl font-bold text-blue-600 mb-2">85%</div>
            <p class="text-gray-600 text-sm">
              Mayor tasa de conversión comparado con usar redes sociales solamente
            </p>
          </div>

          <div class="bg-gray-50 rounded-xl p-5 text-center hover:shadow-md transition-shadow">
            <div class="text-3xl font-bold text-blue-600 mb-2">62%</div>
            <p class="text-gray-600 text-sm">
              Más confirmaciones de asistencia gracias a una experiencia centrada en el evento
            </p>
          </div>

          <div class="bg-gray-50 rounded-xl p-5 text-center hover:shadow-md transition-shadow">
            <div class="text-3xl font-bold text-blue-600 mb-2">3x</div>
            <p class="text-gray-600 text-sm">
              Mayor credibilidad y profesionalismo percibido por los potenciales asistentes
            </p>
          </div>

          <div class="bg-gray-50 rounded-xl p-5 text-center hover:shadow-md transition-shadow">
            <div class="text-3xl font-bold text-blue-600 mb-2">24/7</div>
            <p class="text-gray-600 text-sm">
              Información disponible todo el tiempo, facilitando registros internacionales
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA final -->
    <section class="py-16 bg-gradient-to-br from-blue-600 to-purple-600 text-white">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold mb-6">¿Tienes un evento próximo o una promoción especial?</h2>
        <p class="text-xl max-w-3xl mx-auto mb-8">
          No pierdas tiempo. Tu landing page estará lista en solo 3 horas para que puedas comenzar a promocionar inmediatamente.
        </p>
        <a 
          href="https://wa.me/+573181123660?text=Hola%20Fazil,%20quiero%20solicitar%20mi%20landing%20page%20para%20un%20evento/promoción%20por%20$250,000"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-8 py-4 bg-white text-blue-700 hover:bg-blue-50 rounded-lg font-bold transition shadow-lg hover:shadow-xl"
        >
          Solicitar ahora por solo $250,000
        </a>
        <p class="mt-4 text-sm text-blue-100">
          Pago único. Sin mensualidades ni costos ocultos.
        </p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>