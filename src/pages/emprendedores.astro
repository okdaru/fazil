---
import Layout from '../layouts/Layout.astro';
import HeaderInternal from '../components/HeaderInternal.astro';
import Footer from '../components/Footer.astro';

// Características para emprendedores
const coreFeatures = [
  {
    title: "Diseño profesional para tu marca",
    description: "Página web que refleja la personalidad de tu emprendimiento y proyecta una imagen profesional.",
    icon: "shop"
  },
  {
    title: "Optimización para búsquedas locales",
    description: "Configuración para aparecer cuando potenciales clientes busquen productos o servicios como los tuyos.",
    icon: "search"
  },
  {
    title: "Perfecta visualización en móviles",
    description: "Tu página se adaptará perfectamente a celulares, donde la mayoría de tus clientes te encontrarán.",
    icon: "smartphone"
  },
  {
    title: "Integración con WhatsApp Business",
    description: "Botón directo para que los clientes consulten sobre tus productos o servicios vía WhatsApp.",
    icon: "whatsapp"
  }
];

// Lo que incluye el paquete estándar
const includedFeatures = [
  "Página principal atractiva",
  "Sección de productos o servicios",
  "Información sobre tu emprendimiento",
  "Fotografías de tus productos (proporcionadas por ti)",
  "Formulario de contacto",
  "Botón de WhatsApp Business",
  "Enlaces a redes sociales",
  "Optimización SEO ",
  "Hosting incluido", 
  "Dominio incluido"
];

// Servicios adicionales 
const additionalServices = [
  {
    title: "Catálogo completo con precios",
    description: "Si necesitas un catálogo más elaborado con múltiples productos, descripciones detalladas y precios.",
    price: "Solicitar cotización",
  },
  {
    title: "Sistema de ecommerce",
    description: "Para ventas online completas con carrito de compras, pagos online y gestión de inventario.",
    price: "Solicitar cotización",
  }
];

// Tipos de emprendimientos (para SEO)
const businessTypes = [
  {
    type: "Tiendas y comercios",
    examples: ["Tiendas de ropa", "Artesanías", "Floristerías", "Tiendas de regalos", "Papelerías"]
  },
  {
    type: "Servicios locales",
    examples: ["Peluquerías", "Talleres", "Servicios de limpieza", "Lavanderías", "Servicios a domicilio"]
  },
  {
    type: "Emprendimientos creativos",
    examples: ["Diseñadores", "Artistas", "Fotógrafos", "Manualidades", "Productores locales"]
  }
];
---

<Layout 
  title="Páginas Web para Emprendedores y Tiendas Pequeñas en 180 minutos | Fazil"
  description="Crea la página web para tu emprendimiento en solo 3 horas. Muestra tus productos, conecta con clientes vía WhatsApp y destaca tu marca por $250,000 - pago único."
  ogImage="/images/og-web-emprendedores.jpg"
  isHomepage={false}
>
  <HeaderInternal />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-12 bg-gradient-to-br from-blue-700 to-purple-700 text-white">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Páginas Web para Emprendedores y Pequeños Negocios</h1>
          <p class="text-xl text-blue-100 mb-8">
            Destaca tu marca, muestra tus productos y conecta con más clientes gracias a una presencia digital profesional.
          </p>
          <div class="bg-white/10 p-6 rounded-xl backdrop-blur-sm mb-8">
            <p class="text-lg font-medium">Página web completa por solo</p>
            <div class="flex items-center justify-center">
              <span class="text-3xl font-bold mr-2">$250,000 COP</span>
              <span class="text-sm bg-yellow-400 text-blue-900 py-1 px-3 rounded-full font-bold">Pago único</span>
            </div>
            <p class="text-sm mt-2">Entrega en 180 minutos (3 horas) después de aprobar el diseño</p>
          </div>
          <a 
            href="https://wa.me/+573181123660?text=Hola%20Fazil,%20me%20interesa%20una%20página%20web%20para%20mi%20emprendimiento"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-4 bg-white text-blue-700 hover:bg-blue-50 rounded-lg font-bold transition shadow-lg hover:shadow-xl"
          >
            Solicitar tu página web ahora
          </a>
        </div>
      </div>
    </section>

    <!-- Para qué tipo de emprendimientos -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Para todo tipo de pequeños negocios</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Nuestra solución se adapta a emprendimientos de diferentes sectores, ayudándote a destacar en tu nicho.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          {businessTypes.map(category => (
            <div class="bg-gray-50 rounded-xl p-6 hover:shadow-md transition-shadow">
              <h3 class="text-xl font-bold mb-4 text-center">{category.type}</h3>
              <ul class="space-y-2">
                {category.examples.map(example => (
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{example}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Lo que incluye -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Lo que incluye tu página web</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Obtienes una página web completa, optimizada para mostrar tus productos y conectar con clientes.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
          {coreFeatures.map(feature => (
            <div class="bg-white rounded-xl p-6 text-center shadow-md">
              <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2">{feature.title}</h3>
              <p class="text-gray-600 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>

        <!-- Lista de características incluidas -->
        <div class="max-w-3xl mx-auto bg-white rounded-xl p-8 shadow-md">
          <h3 class="text-xl font-bold mb-4 text-center">Todo esto incluido en tu página web</h3>
          <div class="grid md:grid-cols-2 gap-4">
            {includedFeatures.map(feature => (
              <div class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{feature}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Esta sección reemplaza la anterior sobre ecommerce -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">Nuestro servicio de ecommerce a medida</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Si buscas un ecommerce completo, ofrecemos un servicio superior a las plataformas genéricas como WordPress o Shopify.
      </p>
    </div>

    <div class="max-w-4xl mx-auto bg-blue-50 rounded-xl p-8 shadow-md">
      <div class="mb-6">
        <h3 class="text-xl font-bold mb-4">¿Por qué nuestro ecommerce es diferente?</h3>
        <p class="text-gray-700">
          A diferencia de WordPress o Shopify que utilizan templates genéricos, nuestros ecommerce son desarrollados completamente a medida para tu negocio específico, con todas las funcionalidades que necesitas y sin elementos innecesarios.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg p-5 shadow-sm">
          <h4 class="font-bold text-lg mb-2">100% Personalizado</h4>
          <p class="text-sm text-gray-600">
            Desarrollado exclusivamente para tu negocio, no una plantilla adaptada como ofrecen otras plataformas.
          </p>
        </div>
        
        <div class="bg-white rounded-lg p-5 shadow-sm">
          <h4 class="font-bold text-lg mb-2">Sistema Robusto</h4>
          <p class="text-sm text-gray-600">
            Construido con las mejores prácticas de desarrollo para soportar tu crecimiento y adaptarse a tus necesidades.
          </p>
        </div>
        
        <div class="bg-white rounded-lg p-5 shadow-sm">
          <h4 class="font-bold text-lg mb-2">Excelente Relación Precio-Calidad</h4>
          <p class="text-sm text-gray-600">
            Calidad superior a un precio competitivo, sin costos mensuales ocultos ni comisiones por venta.
          </p>
        </div>
      </div>
      
      <div class="mt-8 text-center">
        <a 
          href="https://wa.me/+573181123660?text=Hola%20Fazil,%20me%20interesa%20conocer%20más%20sobre%20sus%20ecommerce%20a%20medida"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-blue-600 text-white hover:bg-blue-700 rounded-lg font-bold transition-colors"
        >
          Consultar por ecommerce a medida
        </a>
      </div>
    </div>
  </div>
</section>
  </main>
  <Footer />
</Layout>