<script>
  // Script para controlar el menú móvil y el desplegable
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle
    const menuButton = document.getElementById('menuButton');
    const mobileMenu = document.getElementById('mobileMenu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
      
      // Cerrar al hacer clic en enlaces
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', function() {
          mobileMenu.classList.add('hidden');
        });
      });
    }
    
    // Menú desplegable móvil (acordeón)
    const solutionsToggle = document.getElementById('solutionsToggle');
    const solutionsSubMenu = document.getElementById('solutionsSubMenu');
    const solutionsArrow = document.getElementById('solutionsArrow');
    
    if (solutionsToggle && solutionsSubMenu && solutionsArrow) {
      solutionsToggle.addEventListener('click', () => {
        solutionsSubMenu.classList.toggle('hidden');
        solutionsArrow.classList.toggle('rotate-180');
      });
    }
    
    // Menú desplegable de escritorio con clic (no hover)
    const solutionsDropdownBtn = document.getElementById('solutionsDropdownBtn');
    const solutionsDropdown = document.getElementById('solutionsDropdown');
    
    if (solutionsDropdownBtn && solutionsDropdown) {
      // Toggle al hacer clic en el botón
      solutionsDropdownBtn.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevenir que el clic se propague al documento
        solutionsDropdown.classList.toggle('hidden');
      });
      
      // Mantener abierto cuando se mueve al menú
      solutionsDropdown.addEventListener('mouseover', () => {
        solutionsDropdown.classList.remove('hidden');
      });
      
      // Cerrar al hacer clic en cualquier lugar fuera
